<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="60dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#bdbdbd"
        android:startColor="#a8a8a8"
        android:endColor="#d3d3d3"
        android:type="linear"
        />
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"
        />

    <stroke
        android:width="1dp"
        android:color="#878787"
        />
</shape> 